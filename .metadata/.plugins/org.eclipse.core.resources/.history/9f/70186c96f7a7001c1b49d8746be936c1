package programando1;
 
import javax.swing.JOptionPane;
 
 public class ArrayVetor {
	 
 
	public static void main(String[] args) {
	/*Array pode ser todos os tipo de dados e objetos tambem*/
	
	
		String posicoes = JOptionPane.showInputDialog("Quantas posiçoes o Array deve ter :");
		
		
		
		
	/*Array sempre deve ter a quantidade de posiçoes definidas*/
	double [] notas = new double[Integer.parseInt(posicoes)];
	
	
	for (int pos = 0; pos < notas.length; pos++ ) {
		String valor = JOptionPane.showInputDialog("Qual valor da posiçao =" + pos);
		notas[pos] = Double.valueOf(valor);
	}
	
	
	
	
	
	
	
	for(int pos = 0; pos < notas.length; pos++) {
		System.out.println("Nota" + (pos + 1) + "é" + notas[pos] ); 
	
			}
	}
	
 }
	
	/*Atribuir valor nas posicoes do arrays
	notas[0] = 7.8;
	notas[1] = 8.7;
	notas[2] = 9.7;
	notas[3] = 9.9;*/
	
	
	
	
	
	
	
	
	
	
	
	

